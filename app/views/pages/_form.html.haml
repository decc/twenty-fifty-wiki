#centre
  = form_for(@page, :html => { :multipart => true } ) do |f|
    - if @page.errors.any?
      #error_explanation
        %h2
          = pluralize(@page.errors.count, "error")
          prohibited this page from being saved:
        %ul
          - @page.errors.full_messages.each do |msg|
            %li= msg
    .field
      = f.label :title
      %br/
      = f.text_field :title
      %br/
    .field
      = f.label :content
      %br/
      = f.text_area :content
    / .field
    /   = f.check_box :signed_off_toggle    
    /   = f.label :signed_off_toggle, "Tick if you have checked this page and are willing to sign it off as correct"
    .actions
      = f.hidden_field :previous_version_id
      = f.submit
      or #{link_to 'Cancel', @page}

#right= render 'pages/help_bar'
