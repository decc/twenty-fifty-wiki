#centre
  = form_for(@category, :html => { :multipart => true } ) do |f|
    - if @category.errors.any?
      #error_explanation
        %h2
          = pluralize(@category.errors.count, "error")
          prohibited this page from being saved:
        %ul
          - @category.errors.full_messages.each do |msg|
            %li= msg
    .field
      = f.label :title
      %br/
      = f.text_field :title
    .field
      = f.label :content, 'Description of this category'
      %br/
      = f.text_area :content
    .field
      = f.check_box :signed_off_toggle    
      = f.label :signed_off_toggle, "Tick if you have checked this category and are willing to sign it off as correct"      
    .actions
      = f.hidden_field :previous_version_id    
      = f.submit
      or #{link_to 'Cancel', @category}

#right= render 'pages/help_bar'
